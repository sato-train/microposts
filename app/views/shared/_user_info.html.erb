<% @user ||= current_user %>
<div class="media">
  <div class="media-heaing">
    <%= link_to gravatar_for(@user, size: 50), @user, class:"gravatar" %>
    <h1><%= @user.name %></h1>
  </div>
  <div class="media-body">
    <span><%= link_to "profile", @user %></span>
    <span><%= pluralize(@user.microposts.count, "micropost") %></span>
  </div>
</div>
