<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <% if micropost.image? %>
      <%= image_tag micropost.image.url %>
    <% end %>
  </span>  
  <span class="timestamp">
    <%= t '.post_time', time_ago: time_ago_in_words(micropost.created_at) %>
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?"} %>
      <%# resources: micropost と設定してあるため、上記のように書いても自動的にurlが生成される。%>
      <%#= link_to "delete", micropost_path(micropost), method: :delete, data: { confirm: "You sure?"} %>
    <% end %>
  </span>
  <span class="micropost-footer">
    <%= render partial: 'microposts/favorite_form', locals: {micropost: micropost} %>
  </span>
</li>
