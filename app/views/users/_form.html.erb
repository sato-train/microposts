
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@user) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :birthday %>
      <%= f.date_field :birthday %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :place %>
      <%= f.text_field :place %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.submit submit_btn_name, class: "col-md-4 btn btn-primary" %>

    <% end %>
      
  </div>
</div>
