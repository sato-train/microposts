<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stat_info">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <ul class="list-group">
        <li class="list-group-item"><label>名前：</label><%= @user.name %></li>
        <li class="list-group-item"><label>メールアドレス：</label><%= @user.email %></li>
        <li class="list-group-item"><label>自己紹介：</label><%= @user.description %></li>
        <li class="list-group-item"><label>場所：</label><%= @user.place %></li>
        <li class="list-group-item"><label>ホームページ：</label><%= @user.url %></li>
        <li class="list-group-item"><label>誕生日：</label><%= @user.birthday.to_s(:date) unless @user.birthday.blank?  %></li>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <div>
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#micropost" aria-controls="micropost" role="tab" data-toggle="tab">
            Microposts (<%= @user.microposts.count %>)
          </a>
        </li>
        <li role="presentation">
          <a href="#favorite" aria-controls="favorite" role="tab" data-toggle="tab">
            Favorites (<%= @user.user_favorits.count %>)
          </a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="micropost">
          <%= render 'list_micropost' %>
        </div>
        <div role="tabpanel" class="tab-pane" id="favorite">
          <%= render 'list_favorite' %>
        </div>
      </div>
    </div>
  </div>
</div>
