<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <ul class="list-group">
          <li class="list-group-item"><label>名前：</label><%= @user.name %></li>
          <li class="list-group-item"><label>メールアドレス：</label><%= @user.email %></li>
          <li class="list-group-item"><label>自己紹介：</label><%= @user.description %></li>
          <li class="list-group-item"><label>場所：</label><%= @user.place %></li>
          <li class="list-group-item"><label>ホームページ：</label><%= @user.url %></li>
          <li class="list-group-item"><label>誕生日：</label><%= @user.birthday.to_s(:date) unless @user.birthday.blank?  %></li>
        </ul>  
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>) </h3>
      <ol class="microposts">
        <!--
        same as...
        (1) render partial: 'microposts/micropost', collection:@microposts
        (2) @microposts.each do |micropost|
              render partial: 'microposts/micropost', locals: {micropost: micropost}
            end
        -->
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
